                    <li><a href="https://amineekilani.github.io/portfolio" class="text-gray-400 hover:text-indigo-500 transition flex items-center group">
                        <span class="w-1 h-1 bg-indigo-500 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition"></span>
                        FAQ
                    </a></li>
                </ul>
            </div>

            <!-- Contributors -->
            <div>
                <h4 class="font-bold text-lg mb-6 pb-2 border-b border-gray-700 inline-block">Contributeurs</h4>
                <div class="space-y-6">
                    <div class="bg-gray-800 p-4 rounded-lg hover:bg-gray-700 transition">
                        <p class="text-gray-300 mb-2 font-medium">Amine Kilani</p>
                        <div class="flex space-x-4">
                            <a href="https://www.linkedin.com/in/aminekilani" target="_blank" rel="noopener noreferrer" 
                               class="text-gray-400 hover:text-indigo-500 transition transform hover:-translate-y-1">
                                <i class="fab fa-linkedin text-xl"></i>
                            </a>
                            <a href="https://github.com/amineekilani" target="_blank" rel="noopener noreferrer" 
                               class="text-gray-400 hover:text-indigo-500 transition transform hover:-translate-y-1">
                                <i class="fab fa-github text-xl"></i>
                            </a>
                        </div>
                    </div>
                    <div class="bg-gray-800 p-4 rounded-lg hover:bg-gray-700 transition">
                        <p class="text-gray-300 mb-2 font-medium">Ghada Azizi</p>
                        <div class="flex space-x-4">
                            <a href="https://www.linkedin.com/in/ghada-azizi-0a1a88286" target="_blank" rel="noopener noreferrer" 
                               class="text-gray-400 hover:text-indigo-500 transition transform hover:-translate-y-1">
                                <i class="fab fa-linkedin text-xl"></i>
                            </a>
                            <a href="https://github.com/ghada-gkl" target="_blank" rel="noopener noreferrer" 
