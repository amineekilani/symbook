{% extends 'base.html.twig' %}

{% block title %}Espace Admin | {{ livre.titre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 text-center p-3">
                <img src="{{ livre.image | default('placeholder.jpg') }}" alt="{{ livre.titre }}" class="img-fluid rounded" style="max-height: 300px;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title">{{ livre.titre }}</h1>
                    <p class="card-text"><strong>Éditeur:</strong> {{ livre.editeur | default('Non renseigné') }}</p>
                    <p class="card-text"><strong>Date d'édition:</strong> {{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : 'Non renseigné' }}</p>
                    <p class="card-text"><strong>Prix:</strong> {{ livre.prix }} €</p>
                    <p class="card-text"><strong>ISBN:</strong> {{ livre.isbn | default('Non renseigné') }}</p>
                    <p class="card-text"><strong>Résumé:</strong> {{ livre.resume | default('Aucun résumé disponible') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}