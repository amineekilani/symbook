{% extends 'base.html.twig' %}

{% block title %}Espace Admin{% endblock %}

{% block body %}
    <table class="table table-striped">
        <tr>
            <th>Titre</th>
            <th>Editeur</th>
            <th>Date d'édition</th>
            <th>Catégorie</th>
            <th>Prix</th>
            <th colspan="3" style="text-align: center">Actions</th>
        </tr>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.editeur }}</td>
                <td>{{ livre.dateEdition|date('Y-m-d') }}</td>
                <td>{{ livre.categorie.libelle }}</td>
                <td style="text-align: right">{{ livre.prix }} DT</td>
                <td><a href="{{ path('app_livres_show', { 'id': livre.id }) }}">Consulter</a></td>
                <td><a href="{{ path('app_livres_update', { 'id': livre.id }) }}">Modifier</a></td>
                <td><a href="{{ path('app_livres_delete', { 'id': livre.id }) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(livres) }}
    </div>
{% endblock %}