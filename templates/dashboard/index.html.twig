<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SymBook | Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <style>
        .sidebar {
            transition: all 0.3s;
        }
        .sidebar-collapsed {
            width: 70px;
        }
        .sidebar-collapsed .nav-text {
            display: none;
        }
        .sidebar-collapsed .logo-text {
            display: none;
        }
        .content {
            transition: all 0.3s;
        }
        .content-expanded {
            margin-left: 70px;
        }
        .active-nav {
            background-color: #3b82f6;
            color: white !important;
        }
        .active-nav svg {
            color: white !important;
        }
        .chart-container {
            height: 300px;
        }
        .dropdown:hover .dropdown-menu {
            display: block;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar bg-blue-800 text-white w-64 fixed h-full flex flex-col">
            <div class="p-4 flex items-center space-x-3 border-b border-blue-700">
                <i class="fas fa-book-open text-2xl"></i>
                <span class="logo-text text-xl font-bold">Librairie Admin</span>
            </div>
            <div class="flex-1 overflow-y-auto py-4">
                <ul class="space-y-2 px-2">
                    <li>
                        <a href="{{ path('app_dashboard') }}" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700 active-nav">
                            <i class="fas fa-tachometer-alt w-6 text-center"></i>
                            <span class="nav-text ml-3">Tableau de Bord</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_livre_index') }}" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-book w-6 text-center"></i>
                            <span class="nav-text ml-3">Catalogue Livres</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-tags w-6 text-center"></i>
                            <span class="nav-text ml-3">Catégories</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-shopping-cart w-6 text-center"></i>
                            <span class="nav-text ml-3">Commandes</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-users w-6 text-center"></i>
                            <span class="nav-text ml-3">Utilisateurs</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-item flex items-center p-3 rounded-lg hover:bg-blue-700">
                            <i class="fas fa-cog w-6 text-center"></i>
                            <span class="nav-text ml-3">Paramètres</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="p-4 border-t border-blue-700">
                <button id="toggle-sidebar" class="w-full flex items-center justify-center p-2 rounded-lg hover:bg-blue-700">
                    <i class="fas fa-chevron-left"></i>
                    <span class="nav-text ml-3">Réduire</span>
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div id="content" class="content flex-1 flex flex-col ml-64">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm py-4 px-6 flex items-center justify-between">
                <div class="flex items-center">
                    <h1 class="text-xl font-semibold text-gray-800">Tableau de Bord</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <button class="p-2 rounded-full hover:bg-gray-200">
                            <i class="fas fa-bell text-gray-600"></i>
                            <span class="absolute top-0 right-0 h-2 w-2 rounded-full bg-red-500"></span>
                        </button>
                    </div>
                    <div class="dropdown relative">
                        <button class="flex items-center space-x-2 focus:outline-none">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User" class="w-8 h-8 rounded-full">
                            <span class="hidden md:inline-block">Admin</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div class="dropdown-menu absolute hidden right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Profil</a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Paramètres</a>
                            <div class="border-t border-gray-200"></div>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Dashboard Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-gray-100">
                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500">Livres en Stock</p>
                                <h3 class="text-2xl font-bold">{{ stats.books_in_stock }}</h3>
                            </div>
                            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                                <i class="fas fa-book text-xl"></i>
                            </div>
                        </div>
                        <p class="text-sm text-green-500 mt-2"><i class="fas fa-arrow-up"></i> 12% depuis hier</p>
                    </div>
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500">Commandes Aujourd'hui</p>
                                <h3 class="text-2xl font-bold">{{ stats.today_orders }}</h3>
                            </div>
                            <div class="p-3 rounded-full bg-green-100 text-green-600">
                                <i class="fas fa-shopping-cart text-xl"></i>
                            </div>
                        </div>
                        <p class="text-sm text-green-500 mt-2"><i class="fas fa-arrow-up"></i> 5% depuis hier</p>
                    </div>
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500">Utilisateurs Actifs</p>
                                <h3 class="text-2xl font-bold">{{ stats.active_users }}</h3>
                            </div>
                            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                                <i class="fas fa-users text-xl"></i>
                            </div>
                        </div>
                        <p class="text-sm text-red-500 mt-2"><i class="fas fa-arrow-down"></i> 2% depuis hier</p>
                    </div>
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-500">Revenu Total</p>
                                <h3 class="text-2xl font-bold">${{ stats.total_revenue }}</h3>
                            </div>
                            <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                                <i class="fas fa-dollar-sign text-xl"></i>
                            </div>
                        </div>
                        <p class="text-sm text-green-500 mt-2"><i class="fas fa-arrow-up"></i> 8% depuis hier</p>
                    </div>
                </div>

                <!-- Charts Section -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                    <!-- Livre le Plus Vendu -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-lg font-semibold">Livre le Plus Vendu</h2>
                            <div class="relative">
                                <select class="bg-gray-100 border border-gray-300 text-gray-700 py-1 px-3 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                                    <option>Cette semaine</option>
                                    <option>Ce mois</option>
                                    <option>Cette année</option>
                                </select>
                            </div>
                        </div>
                        <div id="top-book-chart" class="chart-container"></div>
                    </div>

                    <!-- Commandes par Période -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-lg font-semibold">Commandes par Période</h2>
                            <div class="relative">
                                <select class="bg-gray-100 border border-gray-300 text-gray-700 py-1 px-3 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                                    <option>7 derniers jours</option>
                                    <option>30 derniers jours</option>
                                    <option>12 derniers mois</option>
                                </select>
                            </div>
                        </div>
                        <div id="orders-chart" class="chart-container"></div>
                    </div>
                </div>

                <!-- Recent Orders and Top Customers -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Dernières Commandes -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="p-6 border-b border-gray-200">
                            <h2 class="text-lg font-semibold">Dernières Commandes</h2>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">N° Commande</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for order in recentOrders %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">#{{ order.id }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.customer }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                {% if order.status == 'Livré' %}bg-green-100 text-green-800
                                                {% elseif order.status == 'En cours' %}bg-yellow-100 text-yellow-800
                                                {% elseif order.status == 'Expédié' %}bg-blue-100 text-blue-800
                                                {% else %}bg-red-100 text-red-800{% endif %}">
                                                {{ order.status }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${{ order.total }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="p-4 border-t border-gray-200 text-center">
                            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">Voir toutes les commandes</a>
                        </div>
                    </div>

                    <!-- Clients Fidèles -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="p-6 border-b border-gray-200">
                            <h2 class="text-lg font-semibold">Clients Fidèles</h2>
                        </div>
                        <div class="divide-y divide-gray-200">
                            {% for customer in loyalCustomers %}
                            <div class="p-4 flex items-center">
                                <img src="https://randomuser.me/api/portraits/{{ customer.status == 'VIP' ? 'women' : 'men' }}/{{ loop.index }}.jpg" 
                                     alt="Client" class="w-10 h-10 rounded-full">
                                <div class="ml-4 flex-1">
                                    <h3 class="text-sm font-medium text-gray-900">{{ customer.name }}</h3>
                                    <p class="text-sm text-gray-500">{{ customer.orders }} commandes | ${{ customer.total_spent }} dépensés</p>
                                </div>
                                <span class="{% if customer.status == 'VIP' %}bg-yellow-100 text-yellow-800{% else %}bg-blue-100 text-blue-800{% endif %} 
                                            text-xs font-medium px-2.5 py-0.5 rounded">
                                    {{ customer.status }}
                                </span>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="p-4 border-t border-gray-200 text-center">
                            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">Voir tous les clients</a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Toggle Sidebar
        document.getElementById('toggle-sidebar').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const toggleIcon = this.querySelector('i');
            
            sidebar.classList.toggle('sidebar-collapsed');
            content.classList.toggle('content-expanded');
            
            if (sidebar.classList.contains('sidebar-collapsed')) {
                toggleIcon.classList.remove('fa-chevron-left');
                toggleIcon.classList.add('fa-chevron-right');
            } else {
                toggleIcon.classList.remove('fa-chevron-right');
                toggleIcon.classList.add('fa-chevron-left');
            }
        });

        // Set active nav item
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active-nav'));
                this.classList.add('active-nav');
            });
        });

        // Google Charts
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawCharts);

        function drawCharts() {
            // Top Book Chart
            var topBookData = google.visualization.arrayToDataTable([
                ['Livre', 'Ventes'],
                ['Le Petit Prince', 125],
                ['1984', 98],
                ['L\'Étranger', 76],
                ['Harry Potter à l\'école des sorciers', 65],
                ['Le Seigneur des Anneaux', 54]
            ]);

            var topBookOptions = {
                title: 'Top 5 des livres les plus vendus',
                titleTextStyle: {
                    fontSize: 16
                },
                legend: { position: 'none' },
                colors: ['#3b82f6'],
                hAxis: {
                    title: 'Nombre de ventes'
                },
                vAxis: {
                    title: 'Livres'
                },
                chartArea: {
                    width: '80%',
                    height: '70%'
                }
            };

            var topBookChart = new google.visualization.BarChart(document.getElementById('top-book-chart'));
            topBookChart.draw(topBookData, topBookOptions);

            // Orders Chart
            var ordersData = google.visualization.arrayToDataTable([
                ['Date', 'Commandes'],
                ['1 Jan', 12],
                ['2 Jan', 19],
                ['3 Jan', 8],
                ['4 Jan', 14],
                ['5 Jan', 21],
                ['6 Jan', 15],
                ['7 Jan', 17]
            ]);

            var ordersOptions = {
                title: 'Commandes des 7 derniers jours',
                titleTextStyle: {
                    fontSize: 16
                },
                curveType: 'function',
                legend: { position: 'none' },
                colors: ['#10b981'],
                pointSize: 5,
                chartArea: {
                    width: '85%',
                    height: '70%'
                }
            };

            var ordersChart = new google.visualization.LineChart(document.getElementById('orders-chart'));
            ordersChart.draw(ordersData, ordersOptions);
        }

        // Resize charts on window resize
        window.addEventListener('resize', function() {
            drawCharts();
        });
    </script>
</body>
</html> 