{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Liste des Livres</h1>
        <a href="{{ path('app_livre_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un livre
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>ISBN</th>
                            <th>Image</th>
                            <th>Éditeur</th>
                            <th>Date</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for livre in livres %}
                        <tr>
                            <td>{{ livre.id }}</td>
                            <td>
                                <strong>{{ livre.titre }}</strong>
                                {% if livre.resume %}
                                <small class="text-muted d-block text-truncate" style="max-width: 200px;">
                                    {{ livre.resume }}
                                </small>
                                {% endif %}
                            </td>
                            <td><code>{{ livre.isbn }}</code></td>
                            <td>
                                {% if livre.image %}
                                <img src="{{ asset('uploads/images/' ~ livre.image) }}" 
                                     alt="{{ livre.titre }}" 
                                     class="img-thumbnail" 
                                     style="max-width: 60px; max-height: 80px;">
                                {% else %}
                                <span class="text-muted">Aucune image</span>
                                {% endif %}
                            </td>
                            <td>{{ livre.editeur }}</td>
                            <td>{{ livre.dateEdition ? livre.dateEdition|date('d/m/Y') : '' }}</td>
                            <td>{{ livre.prix }} €</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}" 
                                       class="btn btn-outline-info" 
                                       title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" 
                                       class="btn btn-outline-warning" 
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-book-open fa-2x mb-2"></i><br>
                                Aucun livre trouvé
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}